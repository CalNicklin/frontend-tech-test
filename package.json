{
  "name": "tech-test",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "build:server": "tsc -p tsconfig.node.json",
    "check": "pnpm run lint && pnpm run typecheck",
    "dev": "concurrently -c \"blue.bold\" -p \"[{name}]\" -n \"CLIENT\" \"pnpm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server/src/app.ts",
    "lint": "eslint .",
    "prettify": "prettier --write \"src/**/*.{ts,tsx,json}\" \"server/src/**/*.{ts,tsx,json}\" \"shared/**/*.{ts,tsx,json}\"",
    "preview": "vite preview",
    "test": "vitest",
    "typecheck": "tsc -b",
    "test:pact": "vitest run src/api/api.pact.test.ts",
    "pact:publish": "pact-broker publish ./pacts --config=pact.config.js"
  },
  "prettier": "@vercel/style-guide/prettier",
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.16.4",
    "@radix-ui/react-dialog": "^1.1.4",
    "@sentry/react": "^8.47.0",
    "@sentry/vite-plugin": "^2.22.7",
    "@tanstack/react-query": "^5.62.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "hono": "^4.6.8",
    "hono-pino": "^0.4.0",
    "lucide-react": "^0.469.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stoker": "^1.3.0",
    "tailwind-merge": "^2.6.0",
    "unplugin-fonts": "^1.3.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^13.2.0",
    "@playwright/test": "^1.49.1",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vercel/style-guide": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.0",
    "globals": "^15.14.0",
    "postcss": "^8.4.49",
    "prettier": "3.4.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@9.4.0"
}
